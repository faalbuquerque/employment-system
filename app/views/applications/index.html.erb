<%= link_to  'Voltar', candidates_path, class:"button btn btn-sm" %>

<div class="div_center">

  <h2>Candidaturas</h2>

  <% @application_jobs.each do |job| %>

    <% application = job.applications.find_by(candidate: current_candidate) %>

    <p>
      <%= link_to job.title_job, application_path(application), id: "application_#{application.id}", class:"btn btn-light" %>

      <% if job.unavailable? %>
        (Vaga encerrada!)
      <% end %>
    </p>

  <% end %>

</div>
