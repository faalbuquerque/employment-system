<h3>
  Resultados da busca 
  <span class='icones'> 🔎 </span>
</h3>

<% return '<h5>Nenhum resultado encontrado!</h5>' if @results.blank? %>

<div class= "result_search">
<% @results.each do |result| %>

  <% if result.class.to_s.eql? 'Job' %>
    <p>
      Vaga: <%= link_to  result.title_job, result %>
    </p>

    <p>
      Nivel: <%= result.level %>
    </p>

    <p>
      Vencimento: <%= I18n.localize(result.date_limit) %>
    </p>

  <% elsif  result.class.to_s.eql? 'Company' %>
    <p>
      Empresa: <%= link_to  result.name, result %>
    </p>
  <% end %>
  <hr>
<% end %>
</div>

<p  ><%= link_to 'Voltar', root_path, class: "button" %><p>