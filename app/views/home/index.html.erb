<h1><%= t '.employment_system' %></h1>

<% if is_admin? %>

  <p>Acesso de Administrador</p>

  <cite>Boas vindas <%= current_collaborator.email %></cite>

  <p>Empresa: <%= current_collaborator.company.name %></p>

  <p><%= link_to 'Preencher informações da Empresa', '#' %></p>

<% elsif collaborator_signed_in? %>

  <p>Acesso de Colaborador</p>

  <cite>Boas vindas <%= current_collaborator.email %></cite>

  <p>Empresa: <%= current_collaborator.company.name %></p>

<% end %>
